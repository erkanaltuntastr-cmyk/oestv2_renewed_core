{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals", "vite/client", "node", "@playwright/test"]
  },
  "include": [
    "src",
    "e2e",
    "scripts",
    "vite.config.ts",
    "vitest.config.mts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
